{
  "name": "state-machine-control",
  "version": "1.3.1",
  "main": "lib/lib.js",
  "keywords": [
    "state machine",
    "state-machine",
    "state machine control"
  ],  
  "scripts": {
    "test": "mocha",
    "test-coverage": "nyc --reporter=html --reporter=text mocha",
    "build-dev": "cross-env NODE_ENV=development webpack",
    "build-prod": "cross-env NODE_ENV=production webpack",
    "build-esm": "cross-env NODE_ENV=production tsc -m commonjs --outDir lib-esm",
    "gen-doc": "typedoc --theme markdown --readme none --out docs ./src",
    "clean": "shx rm -rf dist types",
    "prepublish": "npm run clean && npm run build-prod && npm run build-dev && npm run gen-doc"
  },
  "homepage": "https://github.com/TianyiLi/state-machine",
  "repository": {
    "type": "git",
    "url": "git@github.com:TianyiLi/state-machine.git"
  },
  "files": [
    "example",
    "types",
    "lib"
  ],
  "license": "MIT",
  "author": {
    "name": "Po Ju Li",
    "email": "e0991100238@gmail.com",
    "url": "https://github.com/TianyiLi"
  },
  "types": "types/main.d.ts",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.19",
    "awesome-typescript-loader": "^5.2.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.10",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.2.4",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "typedoc-plugin-markdown": "^1.1.25"
  },
  "dependencies": {
  }
}
